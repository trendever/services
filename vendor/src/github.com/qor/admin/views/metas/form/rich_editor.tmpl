<div class="qor-field">
  <label class="qor-field__label" for="{{.InputId}}">
    {{meta_label .Meta}}
  </label>

  <div class="qor-field__show">
    {{raw .Value}}
  </div>

  <div class="qor-field__edit qor-field__block">
    {{if .Meta.Config.AssetManager}}
      {{$asset_router := printf "%v/%v" .Context.Admin.GetRouter.Prefix .Meta.Config.AssetManager.ToParam}}
      <textarea class="qor-field__input" id="{{.InputId}}" data-redactor-settings="{{marshal .Meta.Config.Settings}}" data-toggle="qor.redactor" data-upload-url="{{$asset_router}}/upload" data-crop-url="{{$asset_router}}/crop" data-text="{&quot;title&quot;: &quot;{{t "qor_admin.form.crop_the_image" "Crop the image"}}&quot;, &quot;ok&quot;: &quot;{{t "qor_admin.form.ok" "OK"}}&quot;, &quot;cancel&quot;: &quot;{{t "qor_admin.form.cancel" "Cancel"}}&quot;}" name="{{.InputName}}" rows="10" {{if not (has_update_permission .Meta)}}disabled{{end}}>{{.Value}}</textarea>
    {{else}}
      <textarea class="qor-field__input" id="{{.InputId}}" data-toggle="qor.redactor" name="{{.InputName}}" rows="10" {{if not (has_update_permission .Meta)}}disabled{{end}}>{{.Value}}</textarea>
    {{end}}
  </div>
</div>
